require 'cpp_build'


INC_DIRS = ["../../", "/usr/local/include/", "../", "./"]
OUT_DIR = "./"

CppBuild.build :vec2 do |b|

	b.compiler 	= :clang
	b.inc_dirs 	= INC_DIRS
	b.files 	= "vec2_unit_test.cpp"
	b.config 	= :release
	b.out_dir 	= OUT_DIR

end

CppBuild.build :vec3 do |b|

	b.compiler 	= :clang
	b.inc_dirs 	= INC_DIRS
